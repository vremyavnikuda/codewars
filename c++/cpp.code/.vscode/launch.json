{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Запуск текущего файла",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",  // Исполняемый файл соответствует имени текущего файла
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Задать для варианта приложения дизассемблирования значение Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Сборка файла",
            "pipeTransport": null,
            "sourceFileMap": { "/build/glibc-WZ4sB8/glibc-2.31": "/usr/src/glibc-2.31" }
        }
    ]
}
